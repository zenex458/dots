fe(){ fdfind -H . $HOME --type f | fzy | xargs -r $EDITOR; }
fcd(){ cd "$(fdfind -H . $HOME --type d | fzy)" || exit; }
#fcd(){ fdfind -H . $HOME --type d | fzy | xargs cd }
fcp(){
    files=$(find ~/ -type f | fzf -m --prompt="choose file: ")
    dir=$(find ~/ -type d | fzf --prompt="choose destination dir: ")
    echo "$files" | xargs -I {} cp {} "$dir" && echo "files copied" || echo "not copied"
}
fo() { fdfind -H . $HOME --type f | fzy | xargs -r -I {} sh -c 'nohup xdg-open "$1" &' -- {}; exit }

cd(){
    if [ -z "$#" ]; then
       builtin cd
    else
       builtin cd "$@"
    fi
    if [ $? -eq 0 ]; then
        ls -F -h --color=always
    fi
}

fbp(){
    files=$(find ~/ -type d | fzf -m --prompt="choose source dirs: ")
    dir=$(find / -type d | fzf --prompt="choose destination dir: ")
    doubts=$(echo "Are you sure?(Y/N)")
    if [ "$doubts" = "Y" ] || [ "$doubts" = "y" ]; then
        echo "$files" | xargs -I {} mv {} "$dir" && echo "files moved" || echo "not moved"
    else
        exit
    fi
}
fcdw() { cd "$(fdfind -H . / --type d | fzy)" || exit; }
lc(){ for i in *; do "$@" "$i"; done }

