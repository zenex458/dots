#!/usr/bin/env bash
mu() {
	moudir="/run/media/zenex/musicsd"
	dirs=$(ls -A $moudir 2>/dev/null | wc -l) #change to find
	if [ "$dirs" -eq 0 ]; then
		printf '%s\n%s\n' "SD Card not mounted." "Mounting...."
		sudo mount -m -v -o rw,noexec,uid=1000,gid=1000 UUID=3961-3035 /run/media/zenex/musicsd
		echo "Starting mpd and ncmpcpp"
	fi
	if [ -f ~/.local/share/mpd/mpd.pid ]; then
		ncmpcpp
	else
		mpd || systemctl --user restart mpd.service && ncmpcpp
	fi
}

helpp() { #fix this to one printf statement?
	printf "Usage: sel [OPTIONS]\n"
	printf "Options:\n"
	printf "\t-r\t Unmount and kill mpd and print lsblk for verification\n"
	printf "\t-h\t Show this help message.\n"
}

if [ -z "$1" ]; then
	mu
elif [ "$1" = "-r" ]; then
	mpc pause && mpd --kill || systemctl --user stop mpd.service && sudo umount -v /run/media/zenex/musicsd && lsblk ##add a awk line or something to check if mount point is unmounted
else
	helpp
fi
